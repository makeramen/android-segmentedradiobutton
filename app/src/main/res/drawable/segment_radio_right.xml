<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners
                android:bottomRightRadius="@dimen/angle_value"
                android:topRightRadius="@dimen/angle_value"/>

            <solid android:color="@color/btn_grey_press"/>

            <stroke
                android:width="@dimen/divide_line"
                android:color="@color/btn_line"/>
        </shape>
    </item>

    <item android:state_checked="true">
        <shape>
            <corners
                android:bottomRightRadius="@dimen/angle_value"
                android:topRightRadius="@dimen/angle_value"/>

            <solid android:color="@color/btn_grey"/>

            <stroke
                android:width="@dimen/divide_line"
                android:color="@color/btn_line"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners
                android:bottomRightRadius="@dimen/angle_value"
                android:topRightRadius="@dimen/angle_value"/>

            <solid android:color="@color/btn_white"/>

            <stroke
                android:width="@dimen/divide_line"
                android:color="@color/btn_line"/>
        </shape>

    </item>

</selector>